@using _6tactics.Utilities.Web.Helpers.String
@model _6tactics.Cms.Core.ViewModels.Web.SectionViewModel

<ul id="navigation">
    @foreach (var item in Model.Items)
    {
        // Add for visibility hidden 
        <li class="home"><a href="#@Html.WordsConnecting(item.Title)">@item.Title</a></li>
    }
</ul>

<script type="text/javascript">
    $(function () {
        $('#navigation a').stop().animate({ 'marginLeft': '-20px' }, 1000);

        $('#navigation > li').hover(
            function () {
                $('a', $(this)).stop().animate({ 'marginLeft': '-2px' }, 200);
            },
            function () {
                $('a', $(this)).stop().animate({ 'marginLeft': '-20px' }, 200);
            }
        );
    });
</script>

