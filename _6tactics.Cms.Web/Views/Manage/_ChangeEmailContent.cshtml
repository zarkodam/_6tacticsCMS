@model _6tactics.AspIdentity.ViewModels.Manage.ChangeEmailViewModel
@{
    ViewBag.Title = "Change e-mail";
}

<div class="row">
    <h3>@ViewBag.Title</h3>
</div>


<div class="row">

    @using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <hr/>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to home", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                <input type="submit" value="Change" class="btn btn-success"/>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
